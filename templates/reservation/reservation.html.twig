

{% extends 'base.html.twig' %}

{% block body %}
        <div class="col-lg-12">
            <div class="card text-center">
                <div class="card-header">
                    New Reservation Time
                </div>
                <div class="card-body">
                    <h5 class="card-title">You have registered for new reservation!</h5>

                    <b class="card-text" style="color: crimson">Save this text below to open this reservation time checker any time.</b>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Reservation link</span>
                        </div>
                        <input type="text" class="form-control" aria-describedby="basic-addon1" value="{{ url('reservation_panel', {'reservationCode' : reservation.code}) }}" readonly>
                    </div><br>




                    <h5 class="card-title">Information about your reservation :</h5>



                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <h3>Queue : #{{ reservationQueuePosition }}</h3>
                            <div class="rounded card">
                                <div class="card-header">
                                    <h2>Reservation : <b>{{ reservation.code }}</b></h2>
                                </div>
                                <div class="card-body">

                                    <p class="card-text">Specialist : <b>{{ reservation.specialist.code }}</b></p>
                                    <p class="card-text">Customer : <b>{{ reservation.customer.code }}</b></p>
                                    <p class="card-text">Current visit state : <b>{{ reservation.state }}</b></p>
                                    <p class="card-text">Starts at : <b>{{ reservation.startTime|format_datetime() }}</b></p>
                                    <p class="card-text">Ends at : <b>{{ reservation.endTime|format_datetime() }}</b></p>
                                    <a href="{{ path('cancel_reservation', { reservationCode : reservation.code}) }}" class="btn btn-danger">Cancel reservation</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    <br>
                    {% if timeLeft %}
                    <p class="card-text">Time left before the visit : {{ timeLeft|date("%Y Years %m Months %d  Days %H Hours %i Minutes and %s Seconds") }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

{% endblock %}